#         easygui.msgbox("That's a number.")

#Optional: Random Username based on first name
fnr = []
lnr = []
def make_user_random():
    msg = "What's your first name?"
    fn = easygui.enterbox(msg, title)
    fnr = fn.title()
    msg2 = "What's your last name?"
    ln = easygui.enterbox(msg2, title)
    lnr = ln.title()
    user = fnr[0][0] + lnr[0][0]
    cu.append((fn, ln, user))



###Main Program Loop
#Conditions to run our program and ask our questions
#Way to exit the program (Stops the while loop)
while True:
    msguser = "Do you want to print users, or add a user?"
    menu = [ "Add User", "Print Users"]
    choice = easygui.choicebox(msguser, title, menu)
    if choice == "Add User": 
        msgran = "Do you want your username to be autogenerated?"
        ran = easygui.ynbox(msgran,title)
        if ran == True:
            make_user_random()
        else:
            make_user()
    else:
        #PrintUsers - Prints all current users    
        easygui.msgbox(cu)
    msg3 = "Do you want to exit the program?"
    answer2 = easygui.ynbox(msg3,title)
    if answer2 == False:
            continue
    if answer2 == True:
            break

